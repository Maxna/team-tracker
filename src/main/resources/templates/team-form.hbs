{{#partial "content"}}

    {{#if editTeam}}
    <h3>Edit team</h3>
        <form action="/teams/{{editTeam.id}}/update" method="post">
            <label for="teamName">Change this team's name</label>
            <input id="teamName" name="teamName" type="text" value="{{editTeam.teamName}}">
            <br>
            <label for="members">Add team members</label>
            <input id="members" name="members" type="text" value="{{editTeam.memberList}}">

    {{else}}
            <h3>Add a new Team</h3>

        <form action="/teams/new" method="post">
            <label for="teamName">Team Name</label>
            <input id="teamName" name="teamName" type="text">
            <br>
            <label for="description">About this team</label>
            <input id="description" name="description" type="text">
            <br>
            <label for="member">Team Members</label>
            <input id="member" name="member" type="text">
    {{/if}}<br><br>
        <button type="submit" class="btn btn-default">Submit Changes!</button>
    </form>
{{/partial}}

{{>layout.hbs}}